<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="br.usp.larc.sembei.capacitysharing.BenchmarkActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/button_benchmark_keygen_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/keygen_spinner"
        android:layout_centerVertical="true"
        android:text="@string/benchmark_start_button" />

    <ProgressBar
        android:id="@+id/keygen_spinner"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/benchmark_keygen_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_benchmark_keygen_start"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/benchmark_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/benchmark_title_keygen"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>